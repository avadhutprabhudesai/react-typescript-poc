{
  "name": "react-typescript-poc",
  "version": "0.1.0",
  "description": "A POC for typescript and writing react apps in typescript",
  "main": "index.js",
  "keywords": [
    "react",
    "reactjs",
    "ts",
    "typescript",
    "react-typesctipt-poc",
    "typescript-react-demo",
    "react-ts"
  ],
  "author": "Avadhut Prabhudesai",
  "license": "ISC",
  "scripts": {
    "dev": "vite",
    "start": "webpack serve --mode=development",
    "prebuild": "npm run validate && npm test",
    "build": "vite build",
    "preview": "vite preview",
    "pretest": "jest --clearCache --clearMocks",
    "test": "jest --watch",
    "format": "prettier --ignore-path .gitignore -c -w ./",
    "lint": "eslint --ignore-path .gitignore --ext .js,.jsx,.json,.ts,.tsx ./",
    "lint:staged": "lint-staged",
    "type-check": "tsc --noEmit",
    "ts": "tsc --watch",
    "validate": "npm run lint && npm run type-check && npm run format",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.(js|jsx|json|ts|tsx)": "npm run validate",
    "*.(ts|tsx)": "npm run type-check"
  },
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@babel/preset-env": "^7.17.10",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@testing-library/react": "^13.1.1",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.4",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "@vitejs/plugin-react": "^1.3.1",
    "babel-jest": "^27.5.1",
    "babel-loader": "^8.2.5",
    "commitizen": "^4.2.4",
    "css-loader": "^6.7.1",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild-loader": "^2.18.0",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-react": "^7.29.4",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^7.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.5.1",
    "lint-staged": "^12.4.0",
    "prettier": "^2.6.2",
    "style-loader": "^3.3.1",
    "typescript": "^4.6.4",
    "typescript-plugin-css-modules": "^3.4.0",
    "vite": "^2.9.5",
    "vite-plugin-sass-dts": "^1.1.31",
    "webpack": "^5.72.1",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.9.0"
  },
  "dependencies": {
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.33",
    "antd": "^4.20.4",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-router-dom": "^6.3.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
